%div{:class => "round round#{round_num}"}
  - if round_num < @tournament.num_rounds - 1
    - Team::REGIONS.each_with_index do |region, region_num|
      %div{:class => "region region#{region_num + 1}"}
        = render partial: 'brackets/game_set', locals: {game_ids: @tournament.game_ids_for(round_num, region)}
  - else
    = render partial: 'brackets/game_set', locals: {game_ids: @tournament.game_ids_for(round_num)}
