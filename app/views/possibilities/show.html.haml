- content_for(:title, "Possible Outcomes")

%h1 #{@pool.name} Pool Possibilities

= cache cache_key_for_possibilities(@pool) do
  - all_outcomes_by_winners(@outcome_set, @pool).each do |best_possible, championships|
    - championships.each do |championship|
      %h3 #{championship.winner.name} BEATS #{championship.loser.name}
    %ul
      - best_possible.each_with_index do |brackets, i|
        - next if brackets.blank?
        %li
          #{(i + 1).ordinalize}:
          = brackets.map(&:name).join(", ")